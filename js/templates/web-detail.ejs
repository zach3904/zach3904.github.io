<h1><%= title %></h1>

<div class="slider">
    <div id="slider">
        <% for (var i=0; i < imgCount; i++) { 
            var imgID = i + 1;%>
            <img src="images/design/full/<%= imgName %>-<%= imgID %>.jpg" alt="<%= title %>">
        <% } %>
    </div>
</div>

<div class="details">
    <div class="skills">
        <h4>Skills Used:</h4>
        <ul>
            <% for (var i=0; i < skills.length; i++) { %>
                <li><%= skills[i] %></li>
            <% } %>
        </ul>
    </div>

    <% if (description != '') { %>
        <div class="description">
            <h4>Description</h4>
            <p><%= description %></p>
        </div>
    <% } %>
</div>
